@model DailyExpense.Models.Expense

@{
    ViewData["Title"] = "Create";
    IList<Expense> listModel = (IList<Expense>)ViewData["Detail"];
    listModel = listModel;
}

<h2>Input Expense</h2>


@Html.AntiForgeryToken()

@if (listModel[0].errorMessage.Length > 0)
{
    <div class="alert alert-warning alert-dismissible fade show" role="alert">
        <strong>@listModel[0].errorMessage</strong>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<form method="POST">
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "Text-danger" })

    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Pengeluaran</label>
        <div class="col-sm-6">
            <input id="txtPengeluaran" type="text" class="form-control" name="nama_pengeluaran">
        </div>
    </div>

    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Jumlah Pengeluaran</label>
        <div class="col-sm-6">
            <input id="txtJmlPengeluaran" type="text" class="form-control" name="jumlah_pengeluaran">
        </div>
    </div>

    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Tanggal Pengeluaran</label>
        <div class="col-sm-6">
            <input id="txtTglPengeluaran" type="text" class="form-control" name="tanggal_pengeluaran" placeholder="yyyy-mm-dd">
        </div>
    </div>

    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Note</label>
        <div class="col-sm-6">
            <input id="txtNote" type="text" class="form-control" name="catatan">
        </div>
    </div>

    <div class="row mb-3">
        <div class="offset-sm-3 col-sm-3 d-grid">
            <input type="submit" value="Create" class="btn btn-primary" />
            <a class="btn btn-danger" href="/" role="button">Cancel</a>
        </div>
        @*<div class="col-sm-3 d-grid">
            <a class="btn btn-danger" href="/" role="button">Cancel</a>
        </div>*@
    </div>
</form>

